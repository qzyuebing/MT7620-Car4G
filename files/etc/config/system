
config system
	option ttylogin '0'
	option log_size '64'
	option urandom_seed '0'
	option compat_version '1.0'
	option description 'MMDVM4G数字热点'
	option zonename 'Asia/Shanghai'
	option timezone 'CST-8'
	option log_proto 'udp'
	option conloglevel '8'
	option cronloglevel '5'
	option hostname 'MT7620A_4G'

config timeserver 'ntp'
	list server '0.openwrt.pool.ntp.org'
	list server '1.openwrt.pool.ntp.org'
	list server '2.openwrt.pool.ntp.org'
	list server '3.openwrt.pool.ntp.org'

config led 'led_4g'
	option name '4g'
	option trigger 'netdev'
	list mode 'link'
	list mode 'tx'
	list mode 'rx'
	option sysfs 'green:system'
	option dev '3g-EC20_4G'

config led 'led_lan'
	option sysfs 'green:lan'
	option port_mask '0x8'
	option trigger 'netdev'
	list mode 'link'
	list mode 'tx'
	list mode 'rx'
	option name '4G WAN'
	option dev '3g-EC20_4G'

config led 'led_wan'
	option name 'wan'
	option sysfs 'green:wan'
	option port_mask '0x10'
	option trigger 'heartbeat'

config led
	option name 'wifi'
	option sysfs 'orange:wlan'
	option trigger 'netdev'
	option dev 'wlan0'
	list mode 'link'
	list mode 'tx'
	list mode 'rx'

